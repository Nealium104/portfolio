---
import { ViewTransitions } from "astro:transitions";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import '@fontsource/fira-sans'

const Primary = ['#89994a']
const Secondary = ['#5a6726']
const Accent = ['#9cb85c']
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Neal Powers</title>
		<ViewTransitions />
	</head>
    <body class=`px-8 bg-[#89994a] text-white/90 max-w-screen-xl mx-auto`>
        <Nav />
		<main class="pt-14 min-h-screen max-w-screen-xl mx-auto bg-[#5a6726] px-4">
			<slot />
		</main>
		<Footer />
    </body>
</html>