---
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
const { frontmatter } = Astro.props;
import '@fontsource/fira-sans'
import { ViewTransitions } from "astro:transitions";

const {class: className, ...rest} = Astro.props
---
<html>
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Neal Powers</title>
        <ViewTransitions />
    </head>
    <body class="bg-gray-800 text-white">
        <div class="max-w-screen-xl mx-auto">
            <Nav />
            <main class=" bg-gray-900 min-h-screen max-w-screen-xl px-8 py-8 mx-auto">
                <h1>{frontmatter.title}</h1>
                <p>Published on: {frontmatter.pubDate.slice(0,10)}</p>
                <p>Written by {frontmatter.author}</p>
                <div class="prose prose-neutral dark:prose-invert lg:prose-xl text-white">
                    <slot class={className} {...rest} />
                </div>
            </main>
            <Footer />
        </div>
    </body>
</html>
<style>
    h1 {
        font-size: 2.25rem;
        line-height: 2.5rem;
    }
    
    h2 {
        font-size: 4rem;
    }
</style>