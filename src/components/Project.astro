---
import { Image } from "astro:assets";
const {title, src, description, tools, github, link} = Astro.props
import { Icon } from 'astro-icon'
---

<div class="border border-black rounded-lg w-full h-46 flex flex-col p-4 text-sm bg-primary/25 shadow-2xl">
    <h3 class="text-2xl font-bold">{title}</h3>
    <div class="w-full h-[300px] bg-black/50 p-4">
        <Image
        class="h-full w-full object-cover mx-auto" 
        src={src}
        width="616"
        height="1323"
        alt={`A screenshot of ${title}`}/>
    </div>
    <div class="py-2">
        <h4 class="font-bold">Description:</h4>
        <p>{`${description}`}</p>
    </div>
    <div>
        <h4 class="font-bold">Tools:</h4>
        <p class="inline">{`${tools}`}</p>
    </div>
    <div class="flex justify-evenly pt-4">
        <a class="transition duration-120 hover:scale-125" href={github}><Icon class="w-8" pack="mdi" name="github" /></a>
        <a class="transition duration-120 hover:scale-125" href={link}><Icon class="w-8" pack="mdi" name="open-in-new" /></a>
    </div>
</div>